@page
@model StockDBRajor.Pages.Stocks.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New Stock</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Stock[0].StockID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock[0].StockName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock[0].price)
            </th>
            <th>
                CRUD Operations
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Stock) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StockID)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.StockName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.StockID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.StockID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.StockID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
